{
	"compilerOptions": {
		"outDir": "./out/",
		"sourceMap": true,
		"target": "es6",
		"lib": [
			"dom",
			"dom.iterable",
			"esnext"
		],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": false,
		"forceConsistentCasingInFileNames": true,
		"noEmit": false,
		"esModuleInterop": true,
		"module": "es6",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"strictNullChecks": false,
		"baseUrl": ".",
		"paths": {
			"@/*": [
				"src/*"
			],
			"@webgl/*": [
				"src/webgl/*"
			]
		}
	},
	"include": [
		"**/*.ts"
	],
	"exclude": [
		"node_modules",
		"out"
	]
}